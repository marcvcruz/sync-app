-if flash[:alert]
  .alert
    =flash[:alert]

=t :password_reset_instructions

=form_for :password_reset, html: { id:'password_resets', url: create_password_reset_path } do |form|
  .form-group
    =form.label :username
    =form.text_field :username, class: 'form-control'

  =form.submit value: t(:continue), class:'btn.btn-default'