h1 =t :password_reset
p =t :choose_a_new_password

=form_for @user, method: :put, url: update_password_reset_url(params[:token]) do |form|
  =hidden_field_tag :username, @user.username

  .form-group
    =form.label :password
    =form.password_field :password, class: 'form-control'
    -if error_exists? @user, :password
      .error
        =error_message_for @user, :password

  .form-group
    =form.label :password_confirmation
    =form.password_field :password_confirmation, class: 'form-control'
    -if error_exists? @user, :password_confirmation
      .error
        =error_message_for @user, :password_confirmation

  =form.submit value: t(:continue), class:'btn.btn-default'


